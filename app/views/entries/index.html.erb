<nav class="navbar navbar-fixed-top navbar-inverse" style="color: white;">
  <h1><%= image_tag("phonelogo.png", :alt => "phone", :size => "100x90" ) %> PhoneBook</h1>
</nav>

<div class="container" style="margin-top:50px;">

<div class="card">
    <h3 class="card-header"><p id="notice" class="flash" style="text-align: center"><%= notice %></p></h3></div>

<div class="btn-group  pull-left">
    <%= link_to entries_path, class: "btn btn-info" do  %>
       <i class="fa fa-home"></i> Home
    <% end %>
</div>


<div class="input-group-btn" style="padding-left: 65px;margin-top:10px;">
  <%= form_tag entries_path, :method => 'get', id: "search-form", class: 'input-group'  do %>
    <%= text_field_tag :search, params[:search],size: 150, placeholder: "Search Name", class: "form-control" %>
      <%= button_tag(type: "submit", class: "btn btn-info") do  %> 
          <i class="fa fa-search" aria-hidden="true" ></i> Search
      <% end %>
    <% end %>
</div>


<div class="btn-group  pull-left" style="margin-top:10px;">
    <%= link_to new_entry_path, class: "btn btn-info" do  %>
       <i class="fa fa-user-plus" aria-hidden="true"></i> Add New
    <% end %>
</div>


<div class="card pull-left" style="margin-top:10px;">
    <div class="card-header">
      <h3> Name </h3>
    </div>

    <% if @entries.present? %>  
      <% @entries.each do |entry| %>
        <br>
        <div class="card-body" style="width: 70rem;">
          <ul class="list-group list-group-flush">
            <h2><%= link_to entry.Name, entry %></h2>
        </ul>
        </div> 
       <% end %>
    <% else %>
        <br>
        <div class="card-body" style="width: 70rem;">
              <ul class="list-group list-group-flush">
                <p><h3>No Results</h3></p>
              </ul>
        </div>
    <% end %>
    
</div>


